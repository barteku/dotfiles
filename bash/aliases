alias l='ls -lh'
alias ll='ls -lha'
alias ..='cd ..'
alias ...='cd ../..'
alias cdd='cd -'

alias cp='cp -v'
alias mv='mv -v'
alias ln='ln -v'
alias rm='rm -v'

function take {
  mkdir $1
  cd $1
}

alias sc='symfony cc'
alias dba='symfony doctrine:build --all --and-load --no-confirmation'
alias spa='symfony plugin:publish-assets'
alias srf='symfony app:routes frontend'
alias srb='symfony app:routes backend'

alias apache2ctl='sudo /opt/local/apache2/bin/apachectl'
alias mysqld='sudo /opt/local/etc/LaunchDaemons/org.macports.mysql5/mysql5.wrapper'

alias g='git status'
alias ga='git add'
alias gc='git commit -v'
alias gca='git commit -va'
alias gb='git branch'
alias gba='git branch -a'
alias gcb='git checkout -b'
alias gco='git checkout'
alias gd='git diff'

function gg {
  git commit -avm "$*"
}