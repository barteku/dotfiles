[mergetool "diffmerge"]
	cmd = "diffmerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\""
	trustexitcode = false
[merge]
	tool = diffmerge
[alias]
	unstage = reset HEAD