[user]
    name = everzet
    email = ever.zet@gmail.com

[push]
    default = current

[url "git://github.com/"]
    insteadOf = gh:

[url "git@github.com:"]
    insteadOf = wgh:

[color]
    branch = auto
    diff   = auto
    status = auto

[apply]
    whitespace = nowarn

[alias]
    s  = status -s
    a  = add
    c  = commit -v
    u  = reset HEAD
    b  = branch
    co = checkout
    cb = checkout -b

[web]
    browser = open

[difftool "Kaleidoscope"]
    cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[difftool]
    prompt = false

[diff]
    tool = Kaleidoscope

[core]
    quotepath = false
    excludesfile = /Users/everzet/.gitignore_global

[interactive]
    singlekey = true

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot

[mergetool]
    prompt = false

[merge]
    tool = Kaleidoscope
